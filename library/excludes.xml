<excludes>
    <global>
        <regexp pattern=".+/[.](?:svn|hg)" />
        <regexp pattern=".+[.](?:hx|hxproj)" />
        <regexp pattern=".+/haxelib[.]xml" />
        <regexp pattern=".+/excludes[.]xml" />
    </global>
    
    <library name="HaQuery">
        <regexp pattern=".+[.](?:zip|n|exe|xml|txt|exe[.]config|pdb)" />
    </library>
    
    <library name="nMagick">
        <regexp pattern="changes[.]txt" />
        <regexp pattern="IM_license[.]html" />
        <regexp pattern="LICENSE[.]txt" />
        <regexp pattern="src" />
    </library>
    
	<library name="NekoCurl">
        <regexp pattern="src" />
    </library>
	
	<library name="hxJson2">
        <regexp pattern="LICENSE" />
        <regexp pattern="README" />
    </library>
</excludes>
