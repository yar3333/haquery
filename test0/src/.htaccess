DirectoryIndex index.php?route=index
Options -Indexes

RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^.*$ index.php?route=$0 [L,QSA]

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*[.]php$ index.php?route=$0 [L,QSA]

Order Deny,Allow
<FilesMatch "^PASSWORD$|[.](log|data)$">
    Deny from all
</FilesMatch>
Allow from all
