<?xml version="1.0" encoding="UTF-8"?>
<project name="Site">
	<property name="src.dir" location="src" />
	<property name="dest.dir" location="bin" />
	<property name="doc.dir" location="doc" />
	
	<property environment="env" />
	<property name="lib.dir" value="${env.HAQUERYPATH}" />
	<property name="build.file.path" value="${lib.dir}${file.separator}tools${file.separator}build.xml" />
	
	<target name="gen-orm">
		<ant antfile="${build.file.path}" target="gen-orm" />
	</target>
	
	<target name="gen-doc">
		<ant antfile="${build.file.path}" target="gen-doc" />
	</target>
	
	<target name="pre-build">
		<ant antfile="${build.file.path}" target="pre-build" />
	</target>
	
	<target name="post-build">
		<ant antfile="${build.file.path}" target="post-build" />
	</target>
</project>